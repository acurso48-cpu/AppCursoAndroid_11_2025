<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejemplo de TableLayout"
            android:textColor="@color/text_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TableLayout es una vista que agrupa vistas en filas y columnas. Se utiliza la etiqueta &lt;TableRow&gt; para definir una fila en la tabla.\n\nRecomendaciones:\n- Es útil para mostrar datos en un formato tabular, como hojas de cálculo.\n- No es tan flexible como ConstraintLayout o incluso GridLayout para diseños complejos.\n- Considera usar RecyclerView con un GridLayoutManager para listas de datos tabulares más complejas o dinámicas, ya que es más eficiente en términos de memoria."
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/text_body"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejemplo Práctico"
            android:textColor="@color/text_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="4dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:padding="16dp">

                <TableRow
                    android:background="#E0E0E0">
                    <TextView
                        android:text="Producto"
                        android:textStyle="bold"
                        android:padding="8dp" />
                    <TextView
                        android:text="Precio"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:padding="8dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Producto 1"
                        android:padding="8dp" />
                    <TextView
                        android:text="10.00"
                        android:gravity="end"
                        android:padding="8dp" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Producto 2"
                        android:padding="8dp" />
                    <TextView
                        android:text="20.00"
                        android:gravity="end"
                        android:padding="8dp" />
                </TableRow>

            </TableLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>